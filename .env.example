# SafariDesk Backend Environment Variables
# Copy this file to .env and update with your values

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
SECRET_ENCRYPTION_KEY=your-encryption-key-here-change-this-in-production

# Database Configuration (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=safaridesk
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# URLs and Domain
FILE_BASE_URL=http://localhost:8000
FILE_URL=http://localhost:8000/uploads/files
AVATARS_URL=http://localhost:8000/uploads/avatars
TASK_FILE_URL=http://localhost:8000/uploads/task-files
KB_IMAGE_URL=http://localhost:8000/uploads/kb/images
MEDIA_URL=/uploads/
MEDIA_ROOT=/mnt

# Frontend URLs
FRONTEND_URL=http://localhost:8000/tickets/
FRONTEND_URL_BASE=http://localhost:8000
DOMAIN_NAME=localhost

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@safaridesk.com

# Email Integration OAuth (Optional - Leave empty if not using)
MAIL_INTEGRATION_OAUTH_SUCCESS_URL=http://localhost:8000/settings/integrations?success=true
MAIL_INTEGRATION_OAUTH_ERROR_URL=http://localhost:8000/settings/integrations?error=true

# Google OAuth (Optional - For Gmail integration)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8100/api/auth/google/callback

# Microsoft OAuth (Optional - For Outlook integration)
MICROSOFT_OAUTH_CLIENT_ID=
MICROSOFT_OAUTH_CLIENT_SECRET=
MICROSOFT_OAUTH_TENANT=common
MICROSOFT_OAUTH_REDIRECT_URI=http://localhost:8100/api/auth/microsoft/callback

# Mailgun (Optional - For advanced email routing)
SAFARIDESK_FORWARDING_DOMAIN=
MAILGUN_SIGNING_KEY=
MAILGUN_API_KEY=
MAILGUN_DOMAIN=mail.safaridesk.io

# Celery (uses Redis config above)
# CELERY_BROKER_URL and CELERY_RESULT_BACKEND are auto-configured from REDIS settings

# Application Environment
APP_ENV=prod
DJANGO_SETTINGS_MODULE=RNSafarideskBack.settings.prod
